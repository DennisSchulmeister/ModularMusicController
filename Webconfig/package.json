{
  "name": "@modular-music-controller/webconfig",
  "version": "1.0.0",
  "description": "Modular Music Controller: Web Configuration Portal",
  "author": "Dennis Schulmeister-Zimolong <dennis@patk.org>",
  "license": "GPL-3.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/DennisSchulmeister/ModularMusicController"
  },
  "type": "module",
  "scripts": {
    "start": "conc -c auto -n browser,server 'npm run watch:browser' 'npm run watch:server'",
    "watch:browser": "tsx bin/esbuild-bundle.ts --watch",
    "watch:server": "tsx watch --exclude db.json server/main.ts",
    "debug": "tsx watch --inspect-brk src/main.ts",
    "clean": "shx rm static/*.bundle.*",
    "build": "tsx bin/esbuild.ts",
    "deploy": "npm run build; tsx bin/deploy.ts static ../Firmware/main/data/web"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-terminator": "^3.2.0",
    "logging": "^4.2.0",
    "lowdb": "^7.0.1",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/qs": "^6.14.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "fast-glob": "^3.3.3",
    "htmx.org": "^2.0.7",
    "nodemon": "^3.1.10",
    "shx": "github:shelljs/shx",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
